{
    "name": "Web Scraper(G)",
    "description": "Scrape content from any web page",
    "version": "1.0",
    "manifest_version": 3,
    "action":{
		"default_icon":"icon.png",
		"default_popup":"popup.html"
    },
    "permissions": [
		"tabs",
		"activeTab",
		"scripting"
	],
	"content_scripts":[
		{
			"matches": ["https://twitter.com/*"],
			"js": ["twitter.js"],
			"run_at": "document_idle"
			
		},
		{
			"matches": ["https://www.facebook.com/*"],
			"js": ["facebook.js"],
			"run_at": "document_idle"
		}
	],
	"background": {
		"service_worker": "background.js"
	}
}
