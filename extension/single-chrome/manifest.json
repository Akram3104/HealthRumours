{
    "name": "Web Scraper",
    "description": "Scrape content from any web page",
    "version": "1.0",
    "manifest_version": 3,
    "action":{
        "default_popup": "popup.html"
    },
    "permissions": [
		"tabs",
		"activeTab",
		"scripting"
	],
	"content_scripts":[
		{
			"matches": ["https://twitter.com/*"],
			"js": ["twitter.js"],
			"run_at": "document_idle"
		},
		{
			"matches": ["https://www.facebook.com/*"],
			"js": ["facebook.js"],
			"run_at": "document_idle"
		},
		{
			"matches": ["https://*/*"],
			"exclude_matches": ["https://twitter.com/*", "https://www.facebook.com/*"],
			"js": ["news_site.js"],
			"run_at": "document_idle"
		}
	],
	"background": {
		"service_worker": "background.js"
	}
}
