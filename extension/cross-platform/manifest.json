{
	"manifest_version": 3,

	"name": "Hello World",
	"description": "A simple page-scraping extension for Chrome",
	"version": "1.0",
	"author": "@thomasforth",

	"background":{
        "service_worker":"popup.js"
    },

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
	"action": {
		"default_icon": "logo.png",
		"default_popup": "popup.html"
	}
}